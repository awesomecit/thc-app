{
  "name": "thc-app",
  "version": "0.1.0",
  "description": "Enterprise application with Platformatic Watt and hexagonal architecture",
  "type": "module",
  "scripts": {
    "------- ðŸš€ Development Workflow -------": "",
    "dev": "wattpm dev",
    "dev:watch": "wattpm dev --watch",
    "dev:debug": "wattpm dev --inspect",
    "------- ðŸ” Quality Checks (Pre-commit) -------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "secrets:check": "secretlint './**/*.{ts,js,json,yml,yaml,env}' '!./docs/**'",
    "------- ðŸ§ª Testing -------": "",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_OPTIONS='--import tsx' node --test 'web/**/test/**/*.test.ts' --test-name-pattern='!integration'",
    "test:integration": "NODE_OPTIONS='--import tsx' node --test 'web/**/test/integration/**/*.test.ts'",
    "test:integration:health": "NODE_OPTIONS='--import tsx' node --test 'web/**/test/integration/health.test.ts'",
    "test:e2e": "echo 'E2E BDD tests with Cucumber - TBD (Sprint 3)'",
    "test:cov": "NODE_OPTIONS='--import tsx' node --test --experimental-test-coverage 'web/**/test/**/*.test.ts'",
    "test:watch": "NODE_OPTIONS='--import tsx' node --test --watch 'web/**/test/**/*.test.ts'",
    "------- ðŸ“¦ Build & Package -------": "",
    "build": "wattpm build",
    "build:clean": "rm -rf dist && npm run build",
    "------- ðŸ³ Docker (TBD) -------": "",
    "docker:build": "echo 'Docker build - create Dockerfile first'",
    "docker:run": "echo 'Docker run - create Dockerfile first'",
    "------- ðŸš€ Production -------": "",
    "start": "wattpm start",
    "start:prod": "NODE_ENV=production wattpm start",
    "------- âœ… Verification (CI/Local) -------": "",
    "verify": "npm run format:check && npm run secrets:check && npm run lint",
    "verify:fix": "npm run format && npm run lint:fix",
    "verify:build": "npm run verify && npm run build",
    "verify:full": "npm run verify && npm run test",
    "------- ðŸ”„ Deployment Workflow -------": "",
    "predeploy": "npm run verify:full",
    "deploy:staging": "echo 'Deploy to staging - configure per platform'",
    "deploy:production": "echo 'Deploy to production - configure per platform'",
    "------- ðŸ› ï¸ Maintenance -------": "",
    "clean": "rm -rf dist node_modules web/*/node_modules",
    "clean:install": "npm run clean && npm install",
    "deps:update": "npm update",
    "deps:audit": "npm audit",
    "------- ðŸ“¦ Release Management -------": "",
    "release:suggest": "node scripts/auto-release.js --dry-run",
    "release": "node scripts/auto-release.js",
    "changelog:generate": "echo 'CHANGELOG generation - TBD (Task 2.2.2)'",
    "------- ðŸ”§ Setup -------": "",
    "prepare": "husky"
  },
  "keywords": [
    "platformatic",
    "watt",
    "hexagonal-architecture",
    "modular-monolith",
    "typescript"
  ],
  "author": "Antonio Cittadino",
  "license": "MIT",
  "dependencies": {
    "@platformatic/sql-mapper": "^3.27.0",
    "better-sqlite3": "^12.5.0",
    "wattpm": "^3.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@secretlint/node": "^11.2.5",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@testcontainers/postgresql": "^11.10.0",
    "@types/node": "^25.0.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "conventional-commits-parser": "^6.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "secretlint": "^11.2.5",
    "semver": "^7.7.3",
    "simple-git": "^3.30.0",
    "testcontainers": "^11.10.0",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.49.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "secretlint",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "secretlint",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.19.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "web/*"
  ]
}
