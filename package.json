{
  "name": "thc-app",
  "version": "0.1.0",
  "description": "Enterprise application with Platformatic Watt and hexagonal architecture",
  "type": "module",
  "scripts": {
    "dev": "wattpm dev",
    "build": "wattpm build",
    "start": "wattpm start",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "platformatic",
    "watt",
    "hexagonal-architecture",
    "modular-monolith",
    "typescript"
  ],
  "author": "Antonio Cittadino",
  "license": "MIT",
  "dependencies": {
    "wattpm": "^3.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@secretlint/node": "^11.2.5",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "secretlint": "^11.2.5"
  },
  "lint-staged": {
    "*": "secretlint",
    "*.{ts,js,mjs,cjs}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.19.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "web/*"
  ]
}
