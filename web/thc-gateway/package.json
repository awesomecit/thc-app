{
  "name": "thc",
  "type": "module",
  "scripts": {
    "dev": "wattpm dev",
    "start": "wattpm start",
    "build": "wattpm build",
    "prebuild": "npm run clean",
    "clean": "rm -rf dist",
    "compile": "tsc",
    "pretest": "npm run compile",
    "test": "node --test 'dist/test/integration/**/*.test.js'",
    "test:e2e": "node --test --test-timeout=180000 'dist/test/e2e/**/*.test.js'",
    "test:watch": "node --test --watch 'dist/test/**/*.test.js'",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "verify": "npm run lint && npm test"
  },
  "devDependencies": {
    "@testcontainers/redis": "^11.10.0",
    "fastify": "^5.0.0",
    "testcontainers": "^11.10.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@fastify/sensible": "^6.0.4",
    "@platformatic/gateway": "^3.27.0",
    "@thc/auth": "*",
    "prom-client": "^15.1.3"
  },
  "engines": {
    "node": ">=22.19.0"
  }
}
