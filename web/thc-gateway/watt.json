{
  "$schema": "https://schemas.platformatic.dev/@platformatic/gateway/3.27.0.json",
  "watch": true,
  "plugins": {
    "paths": ["plugins"]
  },
  "gateway": {
    "applications": [
      {
        "id": "thc-auth-service",
        "origin": "http://thc-auth-service.plt.local",
        "prefix": "/api/auth"
      },
      {
        "id": "thc-db",
        "origin": "http://thc-db.plt.local",
        "prefix": "/api/db"
      }
    ],
    "refreshTimeout": 1000
  }
}
