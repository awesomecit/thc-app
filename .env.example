# === Platformatic Watt ===
PORT=3042
PLT_SERVER_HOSTNAME=0.0.0.0
PLT_SERVER_LOGGER_LEVEL=info
PLT_MANAGEMENT_API=false

# Logger configuration
# Development: pino-pretty for human-readable logs
# Production: empty or omit (defaults to JSON logs)
PLT_LOGGER_TRANSPORT={"target":"pino-pretty","options":{"colorize":true,"translateTime":"SYS:standard","ignore":"pid,hostname"}}

# === PostgreSQL ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=thc_user
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=thc_db
POSTGRES_VERSION=16-alpine
DATABASE_URL=postgres://thc_user:CHANGE_ME@localhost:5432/thc_db

# Platformatic DB Configuration
PLT_THC_DB_DATABASE_URL=postgres://thc_user:CHANGE_ME@localhost:5432/thc_db
PLT_THC_DB_APPLY_MIGRATIONS=true

# === Docker Compose ===
COMPOSE_PROJECT_NAME=thc

