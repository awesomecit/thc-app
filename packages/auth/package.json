{
  "name": "@thc/auth",
  "version": "0.1.0",
  "type": "module",
  "description": "Keycloak authentication plugin for Fastify/Platformatic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean",
    "test": "node --test 'test/unit/**/*.test.ts' 'test/exports.test.ts'",
    "test:watch": "node --test --watch 'test/**/*.test.ts'",
    "test:cov": "c8 --reporter=text --reporter=html --reporter=lcov --exclude='test/**' node --test 'test/**/*.test.ts'",
    "test:integration": "node --test 'test/integration/**/*.test.ts'",
    "test:integration:cov": "c8 --reporter=text --reporter=html --reporter=lcov --exclude='test/**' node --test 'test/integration/**/*.test.ts'",
    "test:all": "npm run test && npm run test:integration"
  },
  "peerDependencies": {
    "fastify": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/oauth2": "^8.1.0",
    "@fastify/session": "^11.0.0",
    "fastify-plugin": "^5.0.0",
    "ioredis": "^5.4.0"
  },
  "devDependencies": {
    "@testcontainers/redis": "^10.13.0",
    "@types/node": "^22.0.0",
    "c8": "^10.1.3",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
